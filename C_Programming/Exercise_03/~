#include<stdio.h>
#include<math.h>
int mandlebrot_fn(float a, float b,int threshold_value);
int main()
{
    int a1;
    int a2;
    int b1;
    int b2;
    int m=80;
    int n=49;
    int x;
    float delta_x;
    float delta_y;
    float real_value[m];
    float imaginary_value[n];
    int i;
    int j;
    printf("Enter the range of the real part of complex number C\n");
    printf("The upper bound is:\t");
    scanf("%d",&a1);
    printf("\n");
    printf("The lower bound is:\t");
    scanf("%d",&a2);
    printf("\n");
    printf("Enthe the range of the imaginary part for the complex number C\n");
    printf("The upper bound is:\t");
    scanf("%d",&b1);
    printf("\n");
    printf("The lower bound is:\t");
    scanf("%d",&b2);
    printf("\n");
    printf("Enter the size of m and n, for the division of it into subsets\n");
    printf("The row value is:\t");
    scanf("%d",&m);
    printf("\n");
    printf("The column valu is:\t");
    scanf("%d",n);
    printf("\n");
    printf("The delta value along x is:\t");
    delta_x=((a1-a2)/m);
    delta_y=((b1-b2)/n);
    printf("%lf",delta_x);
    printf("\n");
    printf("The delta calue along y is:\t");
    printf("%f",delta_y);
    printf("\n");
    real_value[0]=a1;
    imaginary_value[0]=b1;
    for(i=0;i<m;i++)
    {
        real_value[i+1]=real_value[i] + delta_x;
    }
    printf("%f",real_value);
    for(int i=0;i<n;i++)
    {
        imaginary_value[i+1]=imaginary_value[i]+delta_y;
    }
    printf("%f",imaginary_value);
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("lol");
            x=mandlebrot_fn(real_value[i],imaginary_value[j],4);
            if(x==1)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
            
        }
        printf("\n");
    }
    return 0 ;
}
int mandlebrot_fn(float a, float b,int threshold_value)
{
    float z1=0;
    float z2=0;
    float z=0;
    int i;
    z1=a*a-b*b;
    z2=2*a*b;
    for(i=0;i<100000;i++)
    {
        z1= z1 + a;
        z2= z2 + b;
    }
    z=((z1*z1)+(z2*z2));
    if(pow(z,0.5)<=threshold_value)
        {
            printf("1");
            return 1 ;
        }
    else
        {
            printf("0");
            return 0 ;
        }
}
